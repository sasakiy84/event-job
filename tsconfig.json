{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "paths": {
      "@components/*": [
        "./front/components/"
      ]
    }
  },
  "include": ["front/**/*.ts", "front/**/*.d.ts", "front/**/*.tsx", "front/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
